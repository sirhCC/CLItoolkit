{
  "name": "cli-toolkit-framework",
  "version": "0.0.1",
  "description": "A modern, extensible, and developer-friendly CLI toolkit framework.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./core": {
      "import": "./dist/esm/core/index.js",
      "require": "./dist/cjs/core/index.js",
      "types": "./dist/types/core/index.d.ts"
    },
    "./types": {
      "import": "./dist/esm/types/index.js",
      "require": "./dist/cjs/types/index.js",
      "types": "./dist/types/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:clean && npm run build:types && npm run build:esm && npm run build:cjs",
    "build:clean": "rimraf dist",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build:esm": "tsc --project tsconfig.build.json --module ESNext --outDir dist/esm",
    "build:cjs": "tsc --project tsconfig.build.json --module CommonJS --outDir dist/cjs",
    "build:analyze": "npm run build && bundlesize",
    "dev": "ts-node --transpile-only src/index.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/cjs/index.js",
    "lint": "eslint . --ext .ts --cache --cache-location .eslintcache",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit --incremental",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:perf": "node --expose-gc dist/cjs/benchmarks/performance.js",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" --cache",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "validate": "npm run type-check && npm run lint && npm run test && npm run build",
    "prepack": "npm run validate",
    "size": "size-limit",
    "profile": "tsc --generateCpuProfile profile.cpuprofile && echo 'Profile saved to profile.cpuprofile'"
  },
  "keywords": [
    "cli",
    "toolkit",
    "framework",
    "typescript",
    "terminal",
    "console",
    "command-line",
    "parser",
    "validation",
    "performance",
    "zero-dependency"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "bundlesize": "^0.18.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "size-limit": "^11.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "yaml": "^2.8.0",
    "zod": "^4.0.11"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/esm/index.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/cjs/index.js", 
      "maxSize": "55 kB"
    }
  ],
  "size-limit": [
    {
      "name": "ESM Bundle",
      "path": "dist/esm/index.js",
      "limit": "50 KB"
    },
    {
      "name": "CJS Bundle", 
      "path": "dist/cjs/index.js",
      "limit": "55 KB"
    },
    {
      "name": "Core only",
      "path": "dist/esm/core/index.js",
      "limit": "30 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testTimeout": 10000,
    "maxWorkers": "50%"
  }
}
