{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    
    // Enhanced strict type checking for better performance and safety
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // Disabled for development
    "noUnusedParameters": false, // Disabled for development
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    
    // Performance optimizations
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    
    // Advanced features
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    
    // Output configuration
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "isolatedModules": true,
    
    // Enhanced path mapping
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/types": ["./types/index"],
      "@/core": ["./core/index"],
      "@/utils": ["./utils/index"]
    },
    
    // Library configuration for modern Node.js
    "lib": ["ES2023", "DOM"],
    "types": ["node", "jest"],
    
    // Module resolution optimizations
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "coverage"
  ],
  "compileOnSave": false
}
