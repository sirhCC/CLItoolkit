{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/types": ["./types"],
      "@/core": ["./core"],
      "@/utils": ["./utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
